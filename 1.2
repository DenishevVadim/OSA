#include "pch.h"
#include <iostream>
#include <stack>
#include<Windows.h>
using namespace std;
int main()
{
	char a[100];
	setlocale(LC_ALL, "rus");
	stack<char>stack_figure;
	stack<char>stack_sign;
	cout << "Введите строку: ";
	gets_s(a);
	int N = strlen(a);
	for (int i = 0; i < N; i++) {
		if (a[i] == '+' || a[i] == '-' || a[i] == '*' || a[i] == '/') stack_sign.push(a[i]);
		else stack_figure.push(a[i]);
	}
	while (!stack_figure.empty()) {
		stack_sign.push(stack_figure.top());
		stack_figure.pop();
	}
}
