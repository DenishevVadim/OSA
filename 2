#include "pch.h"
#include <iostream>
#include <queue> 

using namespace std;

int main()
{
	setlocale(LC_ALL, "rus");
	queue<int> queue;
	int N;
	cout << "Введите число, которое нужно поместить в очередь" << endl;
	cin >> N;
	queue.push(N);
	cout << "Количество элементов в очереди: " << queue.size() << endl;
	cout << "\nПервый элемент : " << queue.front() << endl;
	cout << "\nПервый элемент с удалением: " << queue.front() << endl;
	queue.pop();
	while (!queue.empty()) {
		queue.pop();
	}
	return 0;
}
